<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    android:background="@drawable/selected_interest_back"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/selected_interestTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        tools:text="Java" />

    <ImageButton
        android:id="@+id/remove_selectedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_close_"
        android:contentDescription="@string/deselect_interest"
        android:padding="4dp" />

</LinearLayout>